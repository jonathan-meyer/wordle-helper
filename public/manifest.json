{
  "manifest_version": 3,
  "name": "Wordle Helper Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Wordle Help!"
  },
  "description": "Help find words for today's Wordle",
  "icons": {
    "16": "wordle-icon.png",
    "32": "wordle-icon.png",
    "48": "wordle-icon.png",
    "128": "wordle-icon.png"
  },
  "permissions": ["activeTab", "scripting", "storage", "declarativeContent"],
  "host_permissions": ["https://*.nytimes.com/*", "https://*.anagrammer.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.nytimes.com/*"],
      "js": ["./static/js/content_scripts.js"]
    }
  ],
  "background": {
    "service_worker": "./static/js/service_worker.js",
    "type": "module"
  },
  "short_name": "wordle-helper"
}
