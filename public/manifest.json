{
  "short_name": "wordle-helper",
  "name": "Wordle Helper Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Wordle Help!"
  },
  "permissions": ["activeTab", "scripting", "storage", "declarativeContent"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./static/js/content.js"]
    }
  ],
  "background": {
    "service_worker": "./static/js/service_worker.js",
    "type": "module"
  },
  "icons": {
    "16": "wordle-icon.png",
    "32": "wordle-icon.png",
    "48": "wordle-icon.png",
    "128": "wordle-icon.png"
  }
}
